{{#if article}}
    {{#each article}}
        <article class="article-item">
            <div class="article-item-container">
                <header class="article-header">
                    <h2 class="article-title"><a href="/{{slug}}">{{title}}</a></h2>
                </header>
                <section class="article-excerpt">
                    <p>
                        {{excerpt tailor=120}}
                    </p>
                </section>
                <footer class="article-meta">
                    {{#if author.avatar}}<img class="author-thumb" src="{{author.avatar}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
                    <span>{{author.name}}</span>
                    {{#if tag.length}}
                        on
                        {{#each tag}}
                        <a href="/tag/{{slug}}">{{name}}</a>
                        {{/each}}
                    {{/if}}
                    <time class="article-date" datetime="{{date format="YYYY-MM-DD"}}">{{date now=true}}</time>
                </footer>
            </div>
        </article>
    {{/each}}
{{else}}
<h2 style="text-align: center">没有文章</h2>
{{/if}}