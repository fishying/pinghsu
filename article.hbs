{{!< default}}

{{#contentFor 'pageScripts'}}
<script>
var article = {
    origin: 'top',
    delay    : 150,
    easing   : 'cubic-bezier(0.6, 0.2, 0.1, 1)',
    rotate   : { x: 2 },
    scale: 1
};
window.sr = ScrollReveal()
sr.reveal('.article-header, .article-meta, .article-content', article, 150)
</script>
{{/contentFor}}

<header class="main-header article-head {{#if article.cover}}" style="background-image: url({{article.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if blog.logo}}
            <a class="blog-logo" href="/"><img src="{{blog.logo}}" alt="{{blog.title}}" /></a>
        {{/if}}
    </nav>
</header>

<main class="content" role="main">
    <article class="article">

        <header class="article-header">
            <h1 class="article-title">{{article.title}}</h1>
            <section class="article-meta">
                {{#if article.author.avatar}}<img class="author-thumb" src="{{article.author.avatar}}" alt="{{article.author.name}}" nopin="nopin" />{{/if}}
                <span>{{article.author.name}}</span>
                <time class="article-date" datetime="{{date format="YYYY-MM-DD"}}">{{date now=true}}</time>
            </section>
        </header>

        <section class="article-content">
            {{{article.content}}}
        </section>
        <footer class="article-footer">
            {{#if article.author.cover}}
            <figure class="author-image">
                <a class="img" href="author/{{article.author.slug}}" style="background-image: url({{article.author.cover}})"><span class="hidden">{{article.author.name}}'s Picture</span></a>
            </figure>
            {{/if}}
        </footer>
    </article>
</main>